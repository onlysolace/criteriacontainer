<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Vaadin Web Application</display-name>
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- testing entity-based JPA2.0 retrieval -->
	<servlet>
		<servlet-name>SimpleFilteringTaskApplication</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>org.vaadin.addons.criteriacontainersample.SimpleFilteringTaskApplication</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>CustomFilteringTaskApplication</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>org.vaadin.addons.criteriacontainersample.CustomFilteringTaskApplication</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>ParameterizedFilteringTaskApplication</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>org.vaadin.addons.criteriacontainersample.ParameterizedFilteringTaskApplication</param-value>
		</init-param>
	</servlet>

	<!-- testing tuple-based JPA2.0 retrieval -->
	<servlet>
		<servlet-name>CustomFilteringTupleApplication</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>org.vaadin.addons.criteriacontainersample.CustomFilteringTupleApplication</param-value>
		</init-param>
	</servlet>

	<!-- testing "entity tuple"-based JPA2.0 retrieval -->
	<servlet>
		<servlet-name>CustomFilteringBeanTupleApplication</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>org.vaadin.addons.criteriacontainersample.CustomFilteringBeanTupleApplication</param-value>
		</init-param>
	</servlet>


	<servlet-mapping>
		<servlet-name>ParameterizedFilteringTaskApplication</servlet-name>
		<url-pattern>/e/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CustomFilteringTupleApplication</servlet-name>
		<url-pattern>/t/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CustomFilteringBeanTupleApplication</servlet-name>
		<url-pattern>/b/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SimpleFilteringTaskApplication</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>
	</servlet-mapping>
</web-app>